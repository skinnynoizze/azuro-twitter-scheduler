# Example .env file for azuro-twitter-scheduler

# Twitter authentication cookies (required)
TWITTER_COOKIES_AUTH_TOKEN=
TWITTER_COOKIES_CT0=
TWITTER_COOKIES_GUEST_ID=

# Twitter username (required)
TWITTER_USERNAME=

# Twitter password (optional, for login fallback)
TWITTER_PASSWORD=
# Twitter email (optional, for login fallback)
TWITTER_EMAIL=

# Run fetch for all leagues immediately on start (true/false)
RUN_ON_START=false
# Post tweets for all leagues immediately on start (true/false)
POST_ON_START=false
# Enable Note Tweet support (true/false, for Blue accounts)
SUPPORTS_NOTETWEET=false
# Enable dry run mode (true/false, no tweets will be posted)
TWITTER_DRY_RUN=false

# Log level: 'info', 'debug', or 'error'
LOG_LEVEL=info